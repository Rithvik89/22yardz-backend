generator client {
    provider = "prisma-client-js"
}

datasource db {
provider = "mysql"
    url      = env("DATABASE_URL")
}


model Users {
    user_id           BigInt          @id @default(autoincrement()) @db.BigInt
    mail_id      String
    password     String
    created_at   DateTime        @default(now())
    identity_provider String     @default("self")
    subject_id String?
    Notification Notifications[]

    @@map("users")
}

model Notifications {
    id BigInt @id @default(autoincrement()) @db.BigInt

    for      Users              @relation(fields: [for_id], references: [user_id])
    for_id   BigInt
    status   NotificationStatus
    metadata Json

    created_at DateTime @default(now())

    @@map("notifications")
}

model Token {
//    id BigInt   @id @default(autoincrement()) @db.BigInt
   user_id  String @unique
   token_id  String
    @@map("token")
}

enum NotificationStatus {
    Unseen
    Seen
    Read
 // Users table should be modified accn.
}








