generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

 // Users table should be modified accn.

model Users {
    user_id           BigInt          @id @default(autoincrement()) @db.BigInt
    mail_id      String
    password     String
    created_at   DateTime        @default(now())
    identity_provider String     @default("self")
    subject_id String?
}

model Token {
   id BigInt   @id @default(autoincrement()) @db.BigInt
   user_id   BigInt   @unique
   token_id  String
    @@map("token")
}





